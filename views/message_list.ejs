<header>All Messages</header>
<ol class='messages'>
<% for( let index = 0; index < message_list.length; index++ ) { %>
    <li class='message'>"<%= message_list[index].message_text %>"<br /> <span class='message-details'>- <%= (typeof loggedInUser != 'undefined' ? message_list[index].user.username : 'Anonymous User') %> (Posted <%= message_list[index].post_date %>)
    <% if (typeof message_list[index].edited != 'undefined') { %>
     <span class='edit-text'>*Edited on <%= message_list[index].edit_date %></span>
    <% } %></span>
    <% if (title == 'User Profile') { %>
        <a href='/messageboard/message/<%= message_list[index]._id %>/delete'>Delete</a> 
    <% } else { %>
        <a href='/messageboard/message/<%= message_list[index]._id %>/update'>Edit</a>
    <% } %>
    <% if (typeof msg_delete_id != 'undefined' && msg_delete_id == message_list[index]._id) { %> 
        <section class='user_prompt'>
          <form method='post' action='/messageboard/message/<%=message_list[index]._id%>/delete'>
            <label for='delete-msg'>Are you sure you want to delete this message?</label>
            <input name='delete-msg' type='submit' value='Yes' class='submit_form'>
          </form>
        </section>
    <% } %></li>
<% } %>
</ol>
<% if (title != 'User Profile') { %>
    <a href='/messageboard/message/create'>Add Message</a> 
<% } %>

